<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="presentation.OrderListController" spacing="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Order List" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TableView fx:id="orderTable">
        <columns>
            <TableColumn fx:id="idCol" text="Order ID"/>
            <TableColumn fx:id="amountCol" text="Total Amount"/>
            <TableColumn fx:id="shipCol" text="Shipping Cost"/>
        </columns>
    </TableView>
</VBox>
