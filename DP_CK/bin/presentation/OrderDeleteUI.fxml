<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="presentation.OrderDeleteController" spacing="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Delete Order" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TextField fx:id="orderIdField" promptText="Enter Order ID to delete" />

    <Button text="Delete Order" onAction="#onDeleteOrder" />
</VBox>
